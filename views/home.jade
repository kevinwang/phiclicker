extends ./layout.jade

block content
  .homeBody
    .navBar
      .logout
        a(href='/logout') Logout
    .dashboard
      a(href='/course/new') New course
      if coursesTaught.length > 0
        .roster
          .rosterHeader
            h1 Courses you teach
          ul
            each course in coursesTaught
              li
                a(href='/course/' + course.id)= course.name

      if coursesTaken.length > 0
        .roster
          .rosterHeader
            h1 Current Courses
          ul
            each course in coursesTaken
              li
                a(href='/remote/' + course.id)= course.name

      if coursesAvailable.length > 0
        .roster
          .rosterHeader
            h1 Available for Registration
          ul
            each course in coursesAvailable
              li
                a(href='/course/' + course.id + '/register')= course.name
